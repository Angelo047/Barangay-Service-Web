@model List<OSSP.Models.users>
@{
    Layout = "_Header";
}
<div id="navbar"></div>


<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Barangay Clearance(Application)</h1>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">

        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Details</th>
                            <th>Request No.</th>
                            <th>Resident No.</th>
                            <th>Last Name</th>
                            <th>First Name</th>
                            <th>Purpose</th>
                            <th>Print Status</th>
                            <th>Date Applied</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <a class="btn btn-success" href="clearance?reqNo=@item.request_no"><i class="fa-solid fa-eye"></i> View</a>
                                </td>
                                <td>@item.request_no</td>
                                <td>@item.resident_accountBD</td>
                                <td>@item.last_name</td>
                                <td>@item.first_name</td>
                                <td>@item.purpose</td>
                                <td>@item.print_status</td>
                                <td>@item.dateString</td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>

<script>

    $(document).ready(function () {
        $("#dataTable").DataTable();
    });
</script>