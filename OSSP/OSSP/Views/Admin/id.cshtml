@model OSSP.Models.users
<title>account Application</title>
<link rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css'>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<div class="container" style="background-color: #f7efe2; margin-top:8px;">
    <div>
        <a onclick="window.history.back()" class="fa fa-arrow-left" style="font-size:24px; margin-top:24px; text-decoration:none; color:black;">  Back</a>
    </div>

    <center>
        <img src="~/images/sb-logos.png" alt="Alternate Text" width="250px" height="180px">
        <h4 style="padding-bottom:12px;">BARANGAY GULOD</h4>
    </center>
</div>


<form action="/" method="post">

    <div class="container">
        <h3>Personal Information</h3>
    </div>

    <div class="border container">


        <div class="row" style="margin-top:6px;">

            <div class="col-md-3 ">
                First Name:
                <input type="text" name="name" class="form-control form-control-sm" value="@Model.first_name" disabled>
            </div>

            <div class="col-md-3">
                Last Name:
                <input type="text" name="name" class="form-control form-control-sm" value="@Model.last_name" disabled>
            </div>

            <div class="col-md-3">
                Middle Name:
                <input type="text" name="name" class="form-control form-control-sm" value="@Model.middle_name" disabled>
            </div>

            <div class="col-md-3">
                Suffix:
                <input type="text" name="name" class="form-control form-control-sm" value="@Model.suffix" disabled>
            </div>

        </div>
        <br />
    </div>

    <div class="border container">
        <div class="row" style="margin-top:6px; margin-bottom:6px;">
            <div class="col-md-3">
                Birthdate:
                <input type="text" name="name" class="form-control form-control-sm" value="@Model.birthdayDesc" disabled>
            </div>

            <div class="col-md-3" style="">
                Sex:
                <input class="form-control form-control-sm" value="@Model.gender" disabled>

            </div>
            <div class="col-md-3" style="">
                Civil Status:
                <input class="form-control form-control-sm" value="@Model.civil_status" disabled>
            </div>
            <div class="col-md-3">
                Nationality:
                <input type="text" name="name" class="form-control form-control-sm" value="@Model.nationality" disabled>
            </div>
        </div>
        <br />
    </div>

    <div class="border container">
        <div class="row" style="margin-top:6px; margin-bottom:6px;">

            <div class="col-md-4">
                Email Address:
                <input type="email" name="name" class="form-control form-control-sm" value="@Model.email_address" disabled>
            </div>

            <div class="col-md-4" style="">
                Phone Number:
                <input type="text" name="name" value="@Model.phone_number" class="form-control form-control-sm" disabled>
            </div>

        </div>
        <br />
    </div>
    <div class="container">
        <br />
        <h3>Present Address</h3>
    </div>
    <div class="border container">
        <div class="row" style="margin-top:6px; margin-bottom:6px;">
            <div class="col-md-4">
                House No.:
                <input type="text" name="name" value="@Model.house_number" class="form-control form-control-sm" disabled>
            </div>
            <div class="col-md-4">
                Street:
                <input type="text" name="name" value="@Model.street" class="form-control form-control-sm" disabled>
            </div>

        </div>
        <br />
    </div>
    <div class="container">
        <br />
        <h3>Notify in case of Emergency:</h3>
    </div>
    <div class="border container">
        <div class="row" style="margin-top:6px; margin-bottom:6px;">

            <div class="col-md-3">
                Name:
                <input type="text" id="emername" name="emername" value="@Model.emername" class="form-control form-control-sm" readonly="readonly">
                <p id="emernameV" class="text-danger"> </p>
            </div>
            <div class="col-md-3">
                House No:
                <input type="text" id="emerhn" name="emerhn" value="@Model.emerhn" class="form-control form-control-sm" readonly="readonly">
                <p id="emerhnV" class="text-danger"> </p>
            </div>
            <div class="col-md-3">
                Street:
                <input type="text" id="emerst" name="emerst" value="@Model.emerst" class="form-control form-control-sm" readonly="readonly">
                <p id="emerstV" class="text-danger"> </p>
            </div>
            <div class="col-md-3">
                Phone Number:
                <input type="text" id="emerpn" name="emerpn" value="@Model.emerpn" class="form-control form-control-sm" readonly="readonly">
                <p id="emerpnV" class="text-danger"> </p>
            </div>
        </div>
        <br />
    </div>
    <div class="border container">
        <div class="row" style="margin-top:6px; margin-bottom:6px;">
            <div class="col-md-4">
                2x2 Picture:
                <img src="~/Files/@Model.pictureDesc" style="width:300px; height:200px" class='imageViewBig'>

            </div>

        </div>
        <br />
    </div>

    <div class="border container">
        <div class="row" style="margin-top:6px; margin-bottom:6px;">
            <div class="col-md-4">
                ID: <br />
                <img src="~/Files/@Model.id_cardDesc" style="width:300px; height:200px" class='imageViewBig'>

            </div>
        </div>
        <br />
    </div>



    <div class="border container">
        <div class="row" style="margin-top:6px; margin-bottom:6px;">
            <div class="col-md-2">
                <button type="button" id="verifyBtn" name="" data-toggle="modal" class="form-control form-control-sm bg-success text-white"><span class="bi bi-check-lg"> </span> Release</button>
            </div>
            <div class="col-md-2">
                <button type="button" name="name" id="resubmitBtn" class="form-control form-control-sm bg-danger text-white"><span class="bi bi-x-lg"> </span> Resubmit</button>
            </div>
            <div class="col-md-2">
                <a href="~/Admin/IDPrint/@Model.request_no" target="_blank" class="form-control form-control-sm text-white btn btn-success"><span class="bi bi-eye-fill"> </span> Preview</a>
            </div>
            <div class="col-md-2">
                <button type="button" name="name" id="printBtn" class="form-control form-control-sm text-white" style="background-color: #ffcc00"><span class="bi bi-printer-fill"> </span> Mark as Done</button>
            </div>

        </div>

    </div>
    <div class="modal fade" id="modalImgageView" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-body text-center">
                    <button type="button" class="btn-close bg-dark" data-bs-dismiss="modal" aria-label="Close" style="position:absolute; top:5px;right:5px;"></button>
                    <img src="~/Files/@Model.id_cardDesc" alt="Image Title" class="img-fluid" id="modalImgageViewIMG">
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="modalImgageView2" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-body text-center">
                    <button type="button" class="btn-close bg-dark" data-bs-dismiss="modal" aria-label="Close" style="position:absolute; top:5px;right:5px;"></button>
                    <img src="~/Files/@Model.pictureDesc" alt="Image Title" class="img-fluid" id="modalImgageViewIMG">
                </div>
            </div>
        </div>
    </div>
</form>
<input type="hidden" id="resident_account" value="@Model.request_no" />
<script>
    $(document).on("click", ".imageViewBig", function () {
        let url = $(this).attr('src');
        $('#modalImgageViewIMG').attr('src', url);
        $('#modalImgageView').modal('toggle');

    });
    $("#verifyBtn").click(function () {

        Swal.fire({
            title: 'Message for releasing this account?',
            text: '(Optional)',
            input: 'textarea',
            showDenyButton: true,
            showCancelButton: false,
            confirmButtonText: 'Release',
            confirmButtonColor: '#22bb33',
            denyButtonText: `Cancel`,
        }).then((result) => {
            if (result.isConfirmed) {
                $.ajax({
                    url: '/Admin/UpdateID',
                    method: 'post',
                    data: { id: $("#resident_account").val(), msg: result.value },
                    dataType: 'json',
                    beforeSend: function (data) {
                        Swal.fire({
                            title: 'Please Wait...',
                            didOpen: () => {
                                Swal.showLoading()
                            },
                            allowOutsideClick: false,
                            showCancelButton: false,
                            showConfirmButton: false,
                        })
                    },
                    success: function (data) {
                        Swal.fire({
                            icon: 'success',
                            title: 'Request Released Successfully',
                            showCloseButton: true,
                        }).then((result) => {
                            if (result) {
                                window.location.href = '/Admin/idApp';
                            }
                        });

                    }
                });
            } else if (result.isDenied) {
                Swal.fire('Changes are not saved', '', 'info')
            }
        })

    });

    $("#resubmitBtn").click(function () {

        Swal.fire({
            title: 'Message for resubmitting the request',
            input: 'textarea',
            showDenyButton: true,
            showCancelButton: false,
            confirmButtonText: 'Resubmit',
            confirmButtonColor: '#22bb33',
            denyButtonText: `Cancel`,
        }).then((result) => {
            if (result.isConfirmed) {
                if (!result.value) {
                    Swal.fire("Message is required");
                } else {
                    $.ajax({
                        url: '/Admin/ResubmitID',
                        method: 'post',
                        data: { id: $("#resident_account").val(), msg: result.value },
                        dataType: 'json',
                        beforeSend: function (data) {
                            Swal.fire({
                                title: 'Please Wait...',
                                didOpen: () => {
                                    Swal.showLoading()
                                },
                                allowOutsideClick: false,
                                showCancelButton: false,
                                showConfirmButton: false,
                            })
                        },
                        success: function (data) {
                            Swal.fire({
                                icon: 'success',
                                title: 'Request Marked as Resubmit',
                                showCloseButton: true,
                            }).then((result) => {
                                if (result) {
                                    window.location.href = '/Admin/idApp';
                                }
                            });

                        }
                    });
                }
            } else if (result.isDenied) {
                Swal.fire('Changes are not saved', '', 'info')
            }
        })

    });

    $("#printBtn").click(function () {

        Swal.fire({
            title: 'Do you want to mark this request as Done?',
            showDenyButton: true,
            showCancelButton: false,
            confirmButtonText: 'Mark as Done',
            confirmButtonColor: '#22bb33',
            denyButtonText: `Cancel`,
        }).then((result) => {
            if (result.isConfirmed) {
                $.ajax({
                    url: '/Admin/PrintIDUpdate',
                    method: 'post',
                    data: { id: $("#resident_account").val() },
                    dataType: 'json',
                    beforeSend: function (data) {
                        Swal.fire({
                            title: 'Please Wait...',
                            didOpen: () => {
                                Swal.showLoading()
                            },
                            allowOutsideClick: false,
                            showCancelButton: false,
                            showConfirmButton: false,
                        })
                    },
                    success: function (data) {
                        Swal.fire({
                            icon: 'success',
                            title: 'Request Marked as Done',
                            showCloseButton: true,
                        }).then((result) => {
                            if (result) {
                                window.location.href = '/Admin/id?reqNo=' + $("#resident_account").val()+'';
                            }
                        });

                    }
                });
            } else if (result.isDenied) {
                Swal.fire('Changes are not saved', '', 'info')
            }
        })

    });
</script>


