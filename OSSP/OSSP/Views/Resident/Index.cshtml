@model List<OSSP.Models.users>
@using Microsoft.AspNetCore.Http

<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Homepage</title>

    <!--LINK CSS -->
    <link rel="stylesheet" href="~/style.css">
    <!-- FontAwsome-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" integrity="sha512-xh6O/CkQoPOWDdYTDqeRdPCVd1SpvCA9XXcUnZS2FmJNp1coAFzvtCN9BmamE+4aHK8yyUHUSCcJHgXloTyT2A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Raleway:300,300i,400,400i,500,500i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="~/assets/vendor/aos/aos.css" rel="stylesheet">
    <link href="~/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="~/assets/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
    <link href="~/assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

</head>
<body>

    <!-- ======= Navbar Section ======= -->
    <nav class="navbar sticky-top navbar-expand-lg navbar-dark bg-success">
        <div class="container-fluid">
            <a class="navbar-brand" href="#"><img src="~/images/sb-logos.png" alt="Logo" style="width:70px; height:70px;"> BRGY GULOD</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse flex-row-reverse" id="navbarNav">
                <ul class="navbar-nav">
                    
                    <li class="nav-item dropdown">
                        <a class="nav-link active dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <u class="text-uppercase text-decoration-none">@ViewBag.fname @ViewBag.lname</u>  <img src="~/images/download.png" width="55px" height="55px" class="rounded-circle">
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="~/Resident/Profile/@Context.Session.GetString("resident")">Profile</a></li>
                            <hr>
                            <li><a class="dropdown-item" href="~/Logout/resLogout" name="logout">Log Out</a></li>
                        </ul>
                    </li>


                </ul>
            </div>
        </div>
    </nav>

    <!-- ======= Services Section ======= -->
    <section id="services" class="services">
        <div class="container" data-aos="fade-up">

            <div class="section-title">
                <h2>Services</h2>
            </div>
            <a href="~/Resident/indprogress" style="color:black;" class="col-lg-4 col-md-6 d-flex align-items-stretch">
                <div class="row">
                    <div class="" data-aos="zoom-in" data-aos-delay="100">

                        <div class="icon-box">
                            <div class="icon"><i class="fa-solid fa-file"></i></div>
                            <h4>
                                Barangay Indigency
                            </h4>
                            <p>A document that are sometimes required by the Philippine government or a private institution as proof of an individual's financial situation.</p>
                        </div>
                    </div>
            </a>
            <a href="~/Resident/clearanceprogress" style="color:black;" class=" d-flex align-items-stretch mt-4 mt-md-0 col-lg-4 col-md-6">
                <div class="" data-aos="zoom-in" data-aos-delay="200">

                    <div class="icon-box">
                        <div class="icon"><i class="fa-solid fa-scroll"></i></div>
                        <h4>
                            Barangay Clearance
                        </h4>
                        <p>Proof of your identity. This document includes your name, thumb mark, signature, issued date, and for what specific purpose.</p>
                    </div>
                </div>
            </a>
            <a href="~/Resident/idprogress" style="color:black;" class="col-lg-4 col-md-6 d-flex align-items-stretch mt-4 mt-lg-0">
                <div class="" data-aos="zoom-in" data-aos-delay="300">

                    <div class="icon-box">
                        <div class="icon"><i class="fa-solid fa-id-card"></i></div>
                        <h4>
                            Barangay ID
                        </h4>
                        <p>An officially recognized government-issued identification card. It is proof that you live where you say you do.</p>
                    </div>
                </div>
            </a>



        </div>

        </div>
    </section>
    <!-- End Services Section -->

  
    <script>
        $(document).ready(function () {
            
            
        });
    </script>


    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <!-- Vendor JS Files -->
    <script src="~/assets/vendor/aos/aos.js"></script>
    <script src="~/assets/vendor/glightbox/js/glightbox.min.js"></script>
    <script src="~/assets/vendor/isotope-layout/isotope.pkgd.min.js"></script>
    <script src="~/assets/vendor/swiper/swiper-bundle.min.js"></script>
    <script src="~/assets/vendor/php-email-form/validate.js"></script>

    <script src="~/script.js"></script>

    @{
        Layout = "_Login-footer";
    }
</body>
</html>