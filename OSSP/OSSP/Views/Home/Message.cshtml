<!-- ======= Contact Section ======= -->
<section id="contact" class="contact section-bg">
    <div class="container">

        <div class="section-title" data-aos="fade-up">
            <h2>Contact Us</h2>
        </div>

        <div class="row">

            <div class="col-lg-5 d-flex align-items-stretch" data-aos="fade-right">
                <div class="info">
                    <div class="address">
                        <i class="fas fa-location-dot"></i>
                        <h4>Location:</h4>
                        <p>Villaflor Village, Novaliches, Quezon City</p>
                    </div>

                    <div class="email">
                        <i class="fa-solid fa-envelope"></i>
                        <h4>Email:</h4>
                        <p>teamtolentino@gmail.com</p>
                    </div>

                    <div class="phone">
                        <i class="fa-solid fa-mobile"></i>
                        <h4>Call:</h4>
                        <p>8-366-3198</p>
                    </div>
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d682.1669585141577!2d121.04007097472069!3d14.71716807214237!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3397b0fb4789271d%3A0x57b41390518e2058!2sGulod%20Barangay%20Hall!5e0!3m2!1sen!2sph!4v1670923992253!5m2!1sen!2sph" frameborder="0" style="border:0; width: 100%; height: 290px;" allowfullscreen></iframe>
                </div>

            </div>

            <div class="col-lg-7 mt-5 mt-lg-0 d-flex align-items-stretch" data-aos="fade-left">
                <form asp-action="Message" class="php-email-form">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label for="name">Your Name</label>
                            <input type="text" asp-for="first_name" id="first_name" class="form-control" required>
                        </div>
                        <div class="form-group col-md-6 mt-3 mt-md-0">
                            <label for="name">Your Email</label>
                            <input type="email" asp-for="email_address" class="form-control" required>
                        </div>
                    </div>
                    <div class="form-group mt-3">
                        <label for="name">Subject</label>
                        <input type="text" asp-for="Subject" class="form-control" required>
                    </div>
                    <div class="form-group mt-3">
                        <label for="name">Message</label>
                        <textarea asp-for="Body" class="form-control" rows="10" required></textarea>
                    </div>

                    <div class="text-center">
                        <input type="submit" value="Send Message" class="btn btn-primary" />
                    </div>
                </form>
            </div>

        </div>

    </div>
</section>
<!-- End Contact Section -->
@{
    Layout = "_Login-footer";
