<script>

    $("#first_name").keypress(function (e) {
        var keyCode = e.keyCode || e.which;
        $("#Fname").html("");
        var regex = /^[A-Za-z]+$/;
        var isValid = regex.test(String.fromCharCode(keyCode));
        return isValid;
    });

    var success = "@ViewBag.forgotMsg";
    $(document).ready(function () {
        if (success == "success") {

            Swal.fire({
                title: 'Success!',
                text: 'You Succesfully Sent the Message!',
                icon: 'success',
                confirmButtonText: 'OK'
            });
        }

    });


</script>